    <p>
      LATEST SECTION COMING SOON!
    </p>

  </div>
</section>

<section>
  <div class="divider" id="section5"></div>
  <div class="participate">
      
    <p>
    </p> 
    <%= form_tag('/welcomes/subscribe', method: "post", id: "subscribe", remote: "true") do -%>
      Before TweetABar goes completely public, it needs to be extensively tested. Want to help out?<br> (Click Sign me up only once!)<br>
      (Check your email!)
      <%= email_field(:email, :address, {id: "email", placeholder: "Email Address"}) %> 
      <br>
      <%= submit_tag("Sign me up!") %>
    <% end %>
    </br>

  </div>
</section>

<section>
  <div class="divider" id="section6"></div>  
  <div class="contact_us">
